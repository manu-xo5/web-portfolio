---
const { id, class: className } = Astro.props;
---

<dialog
	id={id}
	class:list={[
		"fixed top-1/2 left-1/2 -translate-1/2 z-50 w-full max-w-[calc(100%-2rem)] sm:max-w-lg rounded-lg bg-transparent overflow-hidden",
		"animate-in fade-in-90 zoom-in-75",
	]}
	onclick="if (event.target === this) this.close()"
>
	<article
		class:list={[
			"bg-card text-card-foreground p-6 border rounded-lg border-white/10 shadow-lg",
			className,
		]}
	>
		<slot />
	</article>
</dialog>
